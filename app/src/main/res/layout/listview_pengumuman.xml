<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/idPic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mcicon"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/idjudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul listview"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:fontFamily="times new roman"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/idisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ada sebiuah hati yang terluka, ingatkah kau waktu itu. Masih aku ingat selalu dirimu, 5 tahun ini aku telah mencoba membangun cinta dan berharap melupakamu. Aku rindu rindi rindu ridu rindu sangat rindu kamu kamu kamu kamu"
            android:maxLines="6" />
    </LinearLayout>

</LinearLayout>